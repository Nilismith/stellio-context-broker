@prefix ngsi-ld: <https://uri.etsi.org/ngsi-ld/v1/ontology#> .
@prefix apic: <https://ontology.eglobalmark.com/apic#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .
@base <https://uri.etsi.org/ngsi-ld/v1/ontology> .

###################################
#Data Type Classes = Entities
###################################

apic:Beekeeper rdf:type owl:Class ;
			   rdf:type apic:Beekeeper;
               rdfs:subClassOf foaf:Person;
			   rdfs:subClassOf ngsi-ld:Entity.


apic:Apiary    rdf:type owl:Class;
			   rdf:type apic:Apiary;
			   rdfs:subClassOf sosa:Platform;
			   rdfs:subClassOf ngsi-ld:Entity.

apic:BeeHive   rdf:type owl:Class ;
			   rdf:type apic:BeeHive;
			   rdfs:subClassOf sosa:Platform;
			   rdfs:subClassOf ngsi-ld:Entity.

apic:SmartDoor rdf:type owl:Class ;
			   rdf:type apic:SmartDoor;
			   rdfs:subClassOf sosa:Platform;
			   rdfs:subClassOf ngsi-ld:Entity.

apic:Door   rdf:type owl:Class ;
			rdf:type apic:Door;
			rdfs:subClassOf sosa:Sensor;
			rdfs:subClassOf ngsi-ld:Entity.


###################################
#owl : Object Property
###################################

#see egm general context


###################################
#Data Type Properties
###################################


#DoorNumber
apic:doorNumber rdf:type owl:DatatypeProperty ;
				rdfs:subClassOf ngsi-ld:Property ;
				rdfs:domain apic:Door;
                rdfs:range  xsd:string.

#IncomingRate
apic:incomingRate 	rdf:type owl:DatatypeProperty ;
					rdfs:subClassOf ngsi-ld:Property ;
					rdfs:range  xsd:string.

#OutgoingRate
apic:outgoingRate rdf:type owl:DatatypeProperty ;
				  rdfs:subClassOf ngsi-ld:Property ;
				  rdfs:range  xsd:string.
